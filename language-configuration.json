{
	"comments": {
		"lineComment": "#",
		"blockComment": [ "\"\"\"", "\"\"\"" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
	],
	"onEnterRules": [
		{
			"beforeText": "^.*[:%]$",
			"action": { "indent": "indent" }
		},
	]
}