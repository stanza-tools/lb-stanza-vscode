{
    "name": "lb-stanza-vscode",
    "displayName": "L.B. Stanza",
    "description": "Stanza langugage support in VS Code",
    "version": "0.4.1",
    "repository": {
        "url": "https://github.com/stanza-tools/lb-stanza-vscode"
    },
    "publisher": "StanzaTools",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "assets/lb_stanza_medium_icon.png",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "example": "zx --shell=C:\\msys64\\usr\\bin\\bash.exe ./scripts/server.mjs --workspaceDir=\"%npm_config_local_prefix%/example\"",
        "check-env": "node --eval=\"console.log(require('process').env)\" | grep npm",
        "deserialize": "stanza run scripts/deserialize.stanza -- example/test.dat"
    },
    "dependencies": {
        "watch": "^1.0.2",
        "zx": "^7.0.7"
    },
    "devDependencies": {
        "@types/node": "^18.0.1",
        "@types/vscode": "^1.68.1",
        "@typescript-eslint/eslint-plugin": "^5.30.4",
        "@typescript-eslint/parser": "^5.30.4",
        "eslint": "^8.19.0",
        "typescript": "^4.7.4"
    },
    "activationEvents": [
        "onCommand:extension.helloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "stanza",
                "aliases": [
                    "L.B. Stanza",
                    "stanza"
                ],
                "extensions": [
                    ".stanza"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "stanza-proj",
                "aliases": [
                    "L.B. Stanza Project",
                    "Stanza Project",
                    "stanza.proj"
                ],
                "extensions": [
                    ".proj"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stanza",
                "scopeName": "source.stanza",
                "path": "./syntaxes/stanza.tmLanguage.json"
            },
            {
                "language": "stanza-proj",
                "scopeName": "source.stanza.proj",
                "path": "./syntaxes/stanza.proj.tmLanguage.json"
            }
        ]
    }
}
